    ViewData["Title"] = "Eliga sus entradas";
}

<script type="text/javascript">
 
    function sumcant(a) {
        var cant = $(a).parent().children('span');
        $(a).parent().children('span').html(parseInt(cant.html()) + 1);
        calcularCosto(a);
    }

    function calcularCosto(a){
        var prec=$(a).parent().parent().children('#precio');
        var cant = $(a).parent().children('span');
        $(a).parent().parent().children('#costo').html('S/.'+(parseFloat(prec.html().substring(3))*cant.html()).toFixed(2));
    }

    function rescant(a) {
        var cant = $(a).parent().children('span');
        if (parseInt(cant.html()) > 0) {
            $(a).parent().children('span').html(parseInt(cant.html()) - 1);
            calcularCosto(a);
        }
    }

</script>


