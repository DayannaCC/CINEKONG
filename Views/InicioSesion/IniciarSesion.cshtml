@model CINEKONG.Models.IniciarSesion
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Inicia Sesión";
}

<h3>@ViewData["Message"]</h3>

<div class="wrapper">
    <form class="form-signin" asp-action="Iniciar" method="post">       
      <div class="text-center">
          <h2 class="ww">Iniciar Sesion</h2>
          <img class="imglogin" src="~/images/login.png" width="120">
      </div>  
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <input id="Email" type="email" class="form-control" name="Email" placeholder="Correo" asp-for="Email" >
  </div>
  <br>
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <input id="Contra" type="password" class="form-control" name="Contra" placeholder="******" asp-for="Contra">
  </div>
  <div class="checkbox text-center">
    <label class="ww"><input type="checkbox">Recordar</label>
  </div>
  <button  type="submit" class="btn btn-danger btn-block">Acceder</button>
    </form>
  </div>

  <div class="col-md-4 col-centered">
    <div class="row">
      <div class="col-md-4 text-center">
        <a asp-area="" asp-controller="Registro" asp-action="Registrarse">Registrarse</a>
      </div>
      <div class="col-md-4 text-center">
        <a asp-area="" asp-controller="Home" asp-action="RecuperarContra">Olvidaste tu contraseña?</a>
      </div>
      <div class="col-md-4 text-center">
        <a asp-area="" asp-controller="Home" asp-action="CambiarContra">Cambiar contraseña</a>
      </div>  
    </div>
  </div>

</center>

